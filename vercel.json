{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/scrape-prices",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/cron/discover-products",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/generate-report",
      "schedule": "0 7 * * *"
    }
  ]
}