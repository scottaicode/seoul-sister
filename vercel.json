{
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm install",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "crons": [
    {
      "path": "/api/cron/run-intelligence-pipeline",
      "schedule": "0 */2 * * *"
    },
    {
      "path": "/api/reddit-intelligence/run-pipeline",
      "schedule": "0 */4 * * *"
    },
    {
      "path": "/api/cron/scrape-prices",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/price-intelligence/scrape",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/cron/discover-products",
      "schedule": "0 6 * * *"
    },
    {
      "path": "/api/cron/generate-report",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/intelligence/schedule?tier=mega",
      "schedule": "30 6 * * *"
    },
    {
      "path": "/api/intelligence/schedule?tier=rising",
      "schedule": "0 14 * * *"
    },
    {
      "path": "/api/intelligence/schedule?tier=niche",
      "schedule": "0 22 * * *"
    },
    {
      "path": "/api/cron/store-instagram-intelligence",
      "schedule": "0 16 * * *"
    }
  ]
}